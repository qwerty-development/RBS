{
  "expo": {
    "name": "Booklet",
    "slug": "Booklet",
    "scheme": "qwerty-booklet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "owner": "qwerty-app",
    "assetBundlePatterns": ["**/*"],
    "runtimeVersion": { "policy": "appVersion" },

    "updates": {
      "url": "https://u.expo.dev/9cb3f29d-a85c-439a-ac34-513843ed9279",
      "fallbackToCacheTimeout": 0          
    },

    "ios": {
      "supportsTablet": true,
      "config": { "usesNonExemptEncryption": false },
      "bundleIdentifier": "com.notqwerty.booklet",

      "infoPlist": {
        "NSLocationWhenInUseUsageDescription":
          "Booklet uses your location to find nearby restaurants and provide personalized recommendations.",
        "NSLocationAlwaysAndWhenInUseUsageDescription":
          "Booklet uses your location to find nearby restaurants and provide personalized recommendations.",
        "NSContactsUsageDescription":
          "Booklet needs optional access to your contacts only when you ask it to import guests or share a reservation.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": false,
          "NSExceptionDomains": {
            "supabase.co": {
              "NSExceptionRequiresForwardSecrecy": false,
              "NSExceptionMinimumTLSVersion": "TLSv1.0",
              "NSIncludesSubdomains": true
            }
          }
        }
      },

      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/splash-dark.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000"
        }
      },

      "icon": {
        "light": "./assets/icon.png",
        "dark": "./assets/icon-dark.png"
      }
    },

    "android": {
      "adaptiveIcon": { "foregroundImage": "./assets/adaptive-icon.png" },

      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.INTERNET"
      ],

      "splash": {
        "image": "./assets/splash.png",
        "resizeMode": "cover",
        "backgroundColor": "#ffffff",
        "dark": {
          "image": "./assets/splash-dark.png",
          "resizeMode": "cover",
          "backgroundColor": "#000000"
        }
      },

      "usesCleartextTraffic": false,
      "networkSecurityConfig": "./network_security_config.xml"
    },

    "newArchEnabled": false,

    "experiments": { "typedRoutes": true },

    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission":
            "Booklet uses your location to find nearby restaurants and provide personalized recommendations."
        }
      ]   
    ],

